<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dimen14"
    app:cardCornerRadius="@dimen/dimen10">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dimen14">

            <ImageView
                android:id="@+id/img_pahlawan"
                android:layout_width="@dimen/dimen80"
                android:layout_height="@dimen/dimen80"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher_round"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dimen20">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dimen12"
                    android:layout_marginBottom="@dimen/dimen12"
                    android:text="Pahlawan Name"
                    android:textSize="@dimen/dimen14"/>

                <TextView
                    android:id="@+id/txt_asal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginBottom="@dimen/dimen12"
                    android:text="Asal Pahlawan"
                    android:textSize="@dimen/dimen12"/>

            </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>